{
  "files": ["src/ts/main.ts"],
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "ES2020",
    "declaration": true,
    "outDir": "dist/js/framework",
    "lib": ["ES2020", "dom", "scripthost"],
    "useDefineForClassFields": true,
    // To be able to import Json Files.
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}